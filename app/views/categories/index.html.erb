<h1 class="text-center mt-4">Listing all categories</h1>
<div class="container">
  <% if @categories.length == 0 %>
    <div class="text-center mb-1"><h5>There is no any category found.</h5></div>
  <% end %>
  <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
             Category <%= category.id %>
          </div>
          <div class="card-body">
            <h5 class="card-title text-success"><%= category.name %></h5>
            <p class="card-text"><%= category.name %></p>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(category.created_at) %> ago,
            edited <%= time_ago_in_words(category.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
