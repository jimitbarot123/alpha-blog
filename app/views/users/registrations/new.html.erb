<h1 class="text-center mt-4">Sign up for Alpha Blog</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 shadow p-3 mb-3 bg-info rounded">
      <%= bootstrap_devise_error_messages! %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, autofocus: true, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded",autocomplete: 'email', placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, autocomplete: 'current-password', class: "form-control shadow rounded", placeholder: "Choose a password" %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: "form-control shadow rounded", placeholder: "Retype a password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg" %>
        </div>

      <% end %>
    </div>

  </div>
</div>
